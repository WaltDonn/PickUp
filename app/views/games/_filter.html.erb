<%= form_tag("/games", method: "get") do %>
  <%= radio_button_tag(:time_dist, 'time') %> 
  <%= label :time_dist, 'Time', :value => 'time' %>
  <%= radio_button_tag(:time_dist, 'location') %>
  <%= label :time_dist, 'Location', :value => 'location' %>
  <%= check_box_tag :sport1, 1, false %>
  <%= label :sport1, 'Sport 1' %>
  <%= check_box_tag :sport2, 2, false %>
  <%= label :sport2, 'Sport 2' %>
  <%= check_box_tag :sport3, 3, false %>
  <%= label :sport3, 'Sport 3' %>
  <%= check_box_tag :sport4, 4, false %>
  <%= label :sport4, 'Sport 4' %>
  <%= check_box_tag :sport5, 5, false %>
  <%= label :sport5, 'Sport 5' %>
  <%= submit_tag("Filter") %>
<% end %>