<p id="notice"><%= notice %></p>

<h1>Games</h1>

<%= render 'filter' %>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Max size</th>
      <th>Curr size</th>
      <th>Description</th>
      <th>Location</th>
      <th>Sport</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.time %></td>
        <td><%= game.max_size %></td>
        <td><%= game.curr_size %></td>
        <td><%= game.description %></td>
        <td><%= game.location_id %></td>
        <td><%= game.sport_id %></td>
        <td><%= link_to 'Going', {controller: 'user_game_pairs', action: 'rsvp_going', game_id: game.id, user_id: 1}, class: 'button' %>
        <td><%= link_to 'Maybe', {controller: 'user_game_pairs', action: 'rsvp_maybe', game_id: game.id, user_id: 1}, class: 'button' %>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
