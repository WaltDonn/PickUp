<p id="notice"><%= notice %></p>

<div class="dropdown">
    <button class="dropbtn">Filter Games 
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
      <%= render 'filter' %>
    </div>
</div>
<br/>
<h1>Games</h1> 
<table class = "gamesTable">

  <thead>
    <tr>
      <th>Sport</th>
      <th>Location</th>
      <th>Time</th>
      <th>Current Size</th>
      <th>View Info</th>
      <th>RSVP Going</th>
      <th>RSVP Maybe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.sport.title %></td>
        <td><%= game.location.name %></td>
        <td><%= game.time.to_datetime.strftime("%b %d, %l:%M%P")  %></td>
        <td><%= game.curr_size %>/<%=game.max_size %></td>
        <td><%= link_to 'Show', game, class: 'button game_info' %></td>
        <td><%= link_to 'Going', {controller: 'user_game_pairs', action: 'rsvp_going', game_id: game.id, user_id: 1}, class: 'button going' %>
        <td><%= link_to 'Maybe', {controller: 'user_game_pairs', action: 'rsvp_maybe', game_id: game.id, user_id: 1}, class: 'button maybe' %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, class: 'button new_game' %>
